{% extends 'base.html.twig' %}

{% block title %}
	Contactez-moi
{% endblock %}

{% block body %}
	<div class="contact-container">
		<div class="contact">
			<h1 class="text-center p-5 contact-title">Contactez-moi</h1>
		</div>
		<div class="container" id="contact-form">
			{{form_start(form)}}
			<div class="row mb-3">
				<div class="col-lg-6">
					{{form_label(form.firstname)}}
					{{form_widget(form.firstname)}}
				</div>
				<div class="col-lg-6">
					{{form_label(form.lastname)}}
					{{form_widget(form.lastname)}}
				</div>
			</div>
			<div class="row mb-3">
				<div class="col-lg-12">
					{{form_label(form.email)}}
					{{form_widget(form.email)}}
				</div>
			</div>
			<div class="row mb-3">
				<div class="col-lg-12">
					{{form_label(form.message)}}
					{{form_widget(form.message, { 'attr' : {'rows' : 10 }}
					) }}
				</div>
			</div>
			<div class="row mb-3">
				<button class="btn btn-primary" type="submit">Envoyer</button>
			</div>
			{{form_end(form)}}
		</div>
		<div class="d-flex justify-content-center">
			<iframe width="600" height="450" style="border:0" loading="lazy" allowfullscreen src="https://www.google.com/maps/embed/v1/place?q=place_id:ChIJX685-ncui0cRoH--5CqrCAQ&key=AIzaSyCNryfrp8Veb4qYR7PRuVMKR7J0RflqJg8"></iframe>
		</div>
		<div class="contact-end d-flex justify-content-center mt-5 py-5">
			<div class="d-flex flex-column justify-content-center text-center contact-mail">
				<a href="mailto:contact@kevinjanson.com" class="email">
					<i class="far fa-envelope fa-3x m-1"></i>
					<p class="fs-4">contact@kevinjanson.com</p>
				</a>
			</div>
		</div>
	</div>
{% endblock %}
